@model IEnumerable<CarWithPartModel>


<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled Distance
            </th>
            <th>
                Sales
            </th>
            <th>
                Parts
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
        <tr>
            <th>
                @car.Make
            </th>
            <th>
                @car.Model
            </th>
            <th>
                @car.TravelledDistance
            </th>
            <th>
                <ul>
                    @foreach (var sale in car.Sales)
                    {
                        <li>
                            @sale.Discount
                        </li>
                    }
                </ul>
            </th>
            <th>
                <ul>
                    @foreach (var part in car.Parts)
                    {
                        <li>
                            @part.Name - $ @part.Price.ToString("F2")
                        </li>
                    }
                </ul>
            </th>
        </tr>
    }
        </tbody>
    </table>

